%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %title
      II Congresso Nacional de Gastronomia
      - if page.title
        \-
        = page.title
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    %link{:href => "css/sifr.css", :rel => 'stylesheet'}
    - %w{sifr sifr-config}.each do |js|
      %script{ :src => "js/#{js}.js", :type => 'text/javascript'}
    - %w{reset text 960 style}.each do |style|
      %link{:href => "css/#{style}.css", :rel => 'stylesheet'}
    / [if IE]<link rel="stylesheet" href="css/ie.css" type="text/css" media="screen" /><![endif]

  %body
    #header
      %h1
        %a.notext(href='index')
          II Congresso Nacional de Gastronomia

    %div{:class => "container_16 #{layout_type}"}
      #sidebar.grid_3
        %ul
          - site.posts.each do |post|
            %li{:class => "#{'current' if (page.title == post.title)}"}
              %a{ :href => post.url}= post.title

      #content.grid_13
        - if layout_type == 'internal_page'
          #logo_conag.grid_3.pull_1.alpha
            %img{ :src => "images/app/logo_conag_mini.png", :alt => "II CONAG - Congresso Nacional de Gastronomia" }
          .grid_10.omega
            %h2= page.title
            = content
        - else
          = content
      .clear
    #footer
      .container.container_16
        .patrocinio_apoio
          .grid_3.prefix_5.alpha
            %a{ :href => "http://www.natal.rn.gov.br", :target => "_blank" }
              %img{ :src => "images/app/natal-logo.png", :alt => "Prefeitura do Natal" }
            %a{ :href => "http://www.rn.gov.br", :target => "_blank" }
              %img{ :src => "images/app/logo_govrn.png", :alt => "Governo do RN" }
          .grid_2.prefix_2
            %a{ :href => "http://www.unp.br", :target => "_blank" }
              %img{ :src => "images/app/logo_unp.png", :alt => "Prefeitura do Natal" }
          .grid_2.omega
            %a{ :href => "http://www.ideiaseventos.com.br", :target => "_blank" }
              %img{ :src => "images/app/logo_ideias.png", :alt => "Id\303\251ias Eventos" }
        .copyright
          %span.name
            Â©2009 | II CONAG | II Congresso Nacional de Gastronomia
          %br
          %span.email
            %a{ :href => "mailto:conag2010@ideiaseventos.com.br" }
              conag2010@ideiaseventos.com.br
    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js', :type => 'text/javascript' }
    - %w{sifr sifr-config jquery.tools.min theme gridder jquery.validate localization/messages_ptbr }.each do |js|
      %script{ :src => "js/#{js}.js", :type => 'text/javascript'}
    - if variable(:javascript)
      %script{:type => 'text/javascript'}
        = variable(:javascript)
    :javascript
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
